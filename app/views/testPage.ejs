	<h2>Score: {{numberCorrect}}/{{numberTried}}</h2>

	<div class="gameWrapper" ng-show="!(showListCompleteForm)" ng-hide="(showListCompleteForm)">
		<div class="rowWidthObject">
			<div class="profileImageWrapper">
				<img ng-src="/profilePhoto/{{profileId}}"></img>
			</div>
		</div>
		<div class="possibleAnswersWrapper" ng-show="!(showAnswerResults)" ng-hide="showAnswerResults">
			<div ng-repeat="names in wrongNames">
				<h2 ng-click="checkAnser(names.id)">{{names.name}}</h2>
			</div>
		</div>
		<div class="resultsWrapper" ng-show="(showAnswerResults)" ng-hide="!(showAnswerResults)">
			<div class="correctAnswer" ng-show="(theyAnsweredCorrect)" ng-hide="!(theyAnsweredCorrect)">
				<h1>IIIGGGHHTTT!</h1>
			</div>
			<div class="incorrectAnswer" ng-show="!(theyAnsweredCorrect)" ng-hide="(theyAnsweredCorrect)">
				<h1>YOU DOOFUS!</h1>
			</div>
			<div class="rowWidthObject">
				<div class="NextPersonButton">
					<button class="pure-button pure-button-primary" ng-click="getARandomPerson()">Next Person</button>
				</div>
			</div>
			<h2>{{firstName+' '+lastName}}</h2>
			<h5>{{ description }}</h5>
		</div>
