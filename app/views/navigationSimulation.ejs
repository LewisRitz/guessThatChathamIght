<style>
	body, html { margin: 0px; padding: 0px; }
	.topBar { 
		width: 100%; height: 23px; background-color: #F8F8FF; 
		border-bottom: 1px solid #808080;
	}
	.navBar {
		width: 400px; height: 700px; background-color: #F8F8FF;
		position: fixed; 
		left: -400px; 
		top: 100px;
		animation-duration: 1s;
	}
	.navBarTrigger {
		width: 40px; height: 80px; background-color: orange;
		position: fixed; left: 0px; top: 90px;
	}
	.navBarOption {
		display: inline-block;
		background-color: gray;
		width: 110px; padding-left: 1px; padding-right: 1px;
		height: 50px;
	}
	.navBarOptionWrapper {
		width: 100%;
		display: block;
		height: 60px;
		background-color: blue;
	}
	.navBarOptionWrapper h1 {
		font-size: 20px;
		text-align: center;
	}
	@keyframes navBarShow {
		0% { left: -400px; }
		100% { left: -20px; }
	}
	@keyframes navBarHide {
		0% { left: -20px; }
		100% { left: -400px; }
	}
	.testElement {  }
	.navBarOptionWrapperCenteringDiv { width: 350px; margin-left: auto; margin-right: auto; padding-top: 10px;}
	.navOutline { 
		height: 100%; width: 100%; background-color: #F8F8FF; display: none;
	}
	.contentLinkWrapper h5 { margin-left: 20px; }
</style>
