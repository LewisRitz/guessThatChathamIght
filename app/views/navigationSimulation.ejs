<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
<script type="text/javascript" src="/navSimController"></script>
<style>
	body, html { margin: 0px; padding: 0px; }
	.topBar { 
		width: 100%; height: 23px; background-color: #F8F8FF; 
		border-bottom: 1px solid #808080;
	}
	.navBar {
		width: 400px; height: 700px; background-color: red;
		position: fixed; 
		left: -400px; 
		top: 100px;
		animation-duration: 1s;
	}
	.navBarTrigger {
		width: 40px; height: 80px; background-color: orange;
		position: fixed; left: 0px; top: 90px;
	}
	.navBarOption {
		display: inline-block;
		background-color: gray;
		width: 110px; padding-left: 1px; padding-right: 1px;
		height: 50px;
	}
	.navBarOptionWrapper {
		width: 100%;
		display: block;
		height: 60px;
		background-color: blue;
	}
	.navBarOptionWrapper h1 {
		font-size: 20px;
		text-align: center;
	}
	@keyframes navBarShow {
		0% { left: -400px; }
		100% { left: -20px; }
	}
	@keyframes navBarHide {
		0% { left: -20px; }
		100% { left: -400px; }
	}
	.testElement {  }
	.navBarOptionWrapperCenteringDiv { width: 350px; margin-left: auto; margin-right: auto; padding-top: 10px;}
	.navOutline { 
		height: 100%; width: 100%; background-color: #F8F8FF; display: none;
	}
</style>
<style>

</style>
<script>
	$(document).ready(function(){
		$("#navTrigger").mouseenter(function(){
			$("#navBar1").css("animation-name", ""); 
			$("#navBar1").css("animation-name", "navBarShow"); 
			$("#navBar1").css("left", "-20px"); 
		});
		$("#navBar1").mouseleave(function(){
			$("#navBar1").css("animation-name", ""); 
			$("#navBar1").css("animation-name", "navBarHide"); 
			$("#navBar1").css("left", "-400px"); 
		});
		$("#navBarOptnByBook").click(function(){
			$("#navByTopicOutline").css("display", "none");
			$("#navByLessionOutline").css("display", "none");
			$("#navBarOptnByTopic").css("background-color", "gray");
			$("#navBarOptnByLesson").css("background-color", "gray");

			$("#navByBookOutline").css("background-color", 	"#F8F8FF");
			$("#navByBookOutline").css("display", "block");
			$("#navBarOptnByBook").css("background-color", 	"#F8F8FF");
		});
		$("#navBarOptnByTopic").click(function(){
			$("#navByBookOutline").css("display", "none");
			$("#navByLessionOutline").css("display", "none");
			$("#navBarOptnByBook").css("background-color", "gray");
			$("#navBarOptnByLesson").css("background-color", "gray");

			$("#navByTopicOutline").css("background-color", "#F8F8FF");
			$("#navByTopicOutline").css("display", "block");
			$("#navBarOptnByTopic").css("background-color", "#F8F8FF");
		});
		$("#navBarOptnByLesson").click(function(){
			$("#navByBookOutline").css("display", "none");
			$("#navByTopicOutline").css("display", "none");
			$("#navBarOptnByBook").css("background-color", "gray");
			$("#navBarOptnByTopic").css("background-color", "gray");

			$("#navByLessionOutline").css("background-color", "#F8F8FF");
			$("#navByLessionOutline").css("display", "block");
			$("#navBarOptnByLesson").css("background-color", "#F8F8FF");
		});

	});
</script>
<!-- <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css"> -->
</head>
<body ng-controller="navSimController">
	<div class="topBar"></div>
	<div id="testElement" class="testElement"></div>
	<div id="navTrigger" class="navBarTrigger"></div>

	<div id="navBar1" class="navBar">
		<div class="navBarOptionWrapper">
			<div class="navBarOptionWrapperCenteringDiv">
				<div id="navBarOptnByBook" class="navBarOption" style="padding-left: 5px; background-color: #F8F8FF;">
					<h1>By Book</h1>
				</div>
				<div id="navBarOptnByTopic" class="navBarOption">
					<h1>By Topic</h1>
				</div>
				<div id="navBarOptnByLesson" class="navBarOption">
					<h1>By Lesson</h1>
				</div>
			</div>
		</div>
		<div id="navByBookOutline" class="navOutline" style="display:block;">
			<h5 style="color:red; margin: 0px;">stuff here here<h5>
		</div>
		<div id="navByTopicOutline" class="navOutline">
			second junk here
		</div>
		<div id="navByLessionOutline" class="navOutline"></div>
		<div></div>
	</div>

</body>
